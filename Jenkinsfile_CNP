#!groovy

@Library("Infrastructure")

import uk.gov.hmcts.contino.AppPipelineDsl
import uk.gov.hmcts.contino.GithubAPI
import uk.gov.hmcts.contino.GradleBuilder

def type = "java"
def product = "pcs"
def component = "api"

def secrets = [
  'pcs-${env}': [
    secret('pcs-api-s2s-secret', 'PCS_API_S2S_SECRET'),
    secret('idam-system-user-name', 'IDAM_SYSTEM_USERNAME'),
    secret('idam-system-user-password', 'IDAM_SYSTEM_USER_PASSWORD'),
    secret('pcs-api-idam-secret', 'PCS_API_IDAM_SECRET'),
    secret('idam-pcs-user-password', 'IDAM_PCS_USER_PASSWORD'),
    secret('pcs-solicitor-automation-uid', 'PCS_SOLICITOR_AUTOMATION_UID'),
    secret('pcs-prd-admin-username', 'PCS_PRD_ADMIN_USERNAME'),
    secret('pcs-prd-admin-password', 'PCS_PRD_ADMIN_PASSWORD'),
    secret('idam-expired-user-token', 'IDAM_EXPIRED_USER_TOKEN'),
    secret('s2s-expired-service-token', 'S2S_EXPIRED_TOKEN'),
  ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [ $class: 'AzureKeyVaultSecret',
    secretType: 'Secret',
    name: secretName,
    version: '',
    envVariable: envVar
  ]
}

GradleBuilder builder = new GradleBuilder(this, product)

withPipeline(type, product, component) {
  def githubApi = new GithubAPI(this)
  env.IDAM_S2S_AUTH_URL = "http://rpe-service-auth-provider-aat.service.core-compute-aat.internal"
  env.IDAM_API_URL = "https://idam-api.aat.platform.hmcts.net"
  env.PACT_BROKER_URL = "https://pact-broker.platform.hmcts.net"
  loadVaultSecrets(secrets)
  enableDbMigration('pcs')

  onPR() {
    enablePactAs([
      AppPipelineDsl.PactRoles.CONSUMER,
      AppPipelineDsl.PactRoles.CONSUMER_DEPLOY_CHECK
    ])
    setPreviewEnvVars()
    if (githubApi.getLabelsbyPattern(env.BRANCH_NAME, "pr-values:ccd").size() > 0) {
      enableHighLevelDataSetup()
    }
    if (githubApi.getLabelsbyPattern(env.BRANCH_NAME, "enable_e2e_full_regression").size() > 0) {
      env.E2E_SUITE = "chrome"
    }
    else if (githubApi.getLabelsbyPattern(env.BRANCH_NAME, "enable_e2e_regression").size() > 0) {
      env.E2E_SUITE = "regression"
    }
  }

  onMaster() {
    enablePactAs([
      AppPipelineDsl.PactRoles.CONSUMER,
      AppPipelineDsl.PactRoles.CONSUMER_DEPLOY_CHECK
    ])
    enableHighLevelDataSetup("", true)
    setAatEnvVars()
//    enableE2eTest() TODO: Re-enable when the AAT environment pattern is configured
  }

  onDemo {
    setDemoEnvVars()
  }

  onIthc {
    setIthcEnvVars()
  }

  onPerftest {
    setPerftestEnvVars()
    enableHighLevelDataSetup()
  }

  before('highleveldatasetup') {
    onPR{
      env.CASE_TYPE_SUFFIX="${CHANGE_ID}"
      env.DEFINITION_STORE_URL_BASE = "https://ccd-definition-store-pcs-api-pr-${CHANGE_ID}.preview.platform.hmcts.net"
      env.CASE_API_URL = "https://pcs-api-pr-${CHANGE_ID}.preview.platform.hmcts.net"
      env.DATA_STORE_URL_BASE="https://ccd-data-store-api-pcs-api-pr-${CHANGE_ID}.preview.platform.hmcts.net"
      generateDefinitions(builder)
      env.CASE_API_URL = "https://pcs-api-aat.aat.platform.hmcts.net"
      env.CASE_TYPE_SUFFIX=""
      echo "casetype suffix : ${env.CASE_TYPE_SUFFIX}"
    }
    onMaster{
      env.DEFINITION_STORE_URL_BASE = "http://ccd-definition-store-api-aat.service.core-compute-aat.internal"
      env.CASE_API_URL = "http://pcs-api-aat.service.core-compute-aat.internal"
      env.DATA_STORE_URL_BASE="http://ccd-data-store-api-aat.service.core-compute-aat.internal"
    }
    onPerftest{
      env.DEFINITION_STORE_URL_BASE = "http://ccd-definition-store-api-perftest.service.core-compute-perftest.internal"
      env.CASE_API_URL = "http://pcs-api-perftest.service.core-compute-perftest.internal"
      env.DATA_STORE_URL_BASE="http://ccd-data-store-api-perftest.service.core-compute-perftest.internal"
    }
    generateDefinitions(builder)
  }

  afterAlways('functionalTest:preview') {
    archiveFunctionalTestReports()
  }

  afterAlways('functionalTest:aat') {
    archiveFunctionalTestReports()
  }

  afterAlways('e2eTest:aat') {
    archiveE2eTestReports()
  }
}

def setPreviewEnvVars() {
  env.MANAGE_CASE_BASE_URL = "https://xui-pcs-api-pr-${CHANGE_ID}.preview.platform.hmcts.net"
  env.ENVIRONMENT= "preview"
  env.E2E_SUITE= "pr"
}

def setAatEnvVars() {
  env.MANAGE_CASE_BASE_URL = "https://manage-case.aat.platform.hmcts.net"
  env.ENVIRONMENT= "aat"
  env.E2E_SUITE= "regression"
}

def setDemoEnvVars() {
  env.ENVIRONMENT= "demo"
}

def setIthcEnvVars() {
  env.ENVIRONMENT= "ithc"
}

def setPerftestEnvVars() {
  env.ENVIRONMENT= "perftest"
}

def generateDefinitions(builder) {
  builder.gradle('--rerun-tasks generateCCDConfig')
  sh "./bin/create-xlsx.sh ${env.ENVIRONMENT}"
  steps.archiveArtifacts artifacts: "build/definitions/*.xlsx"
}

def archiveFunctionalTestReports() {
  publishHTML([
    allowMissing: true,
    alwaysLinkToLastBuild: true,
    keepAll: true,
    reportDir: "report-for-functional-tests",
    reportFiles: 'index.html',
    reportName: 'API Functional Test Report'
  ])

  archiveArtifacts allowEmptyArchive: true, artifacts: '**/report-for-functional-tests/*'
}

def archiveE2eTestReports() {
  publishHTML([
    allowMissing: true,
    alwaysLinkToLastBuild: true,
    keepAll: true,
    reportDir: "e2e-output",
    reportFiles: 'index.html',
    reportName: 'E2E Test Report'
  ])

  archiveArtifacts allowEmptyArchive: true, artifacts: '**/e2e-output/**/*'
}



