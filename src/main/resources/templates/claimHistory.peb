<h2 class="govuk-heading-m">Counterclaims</h2>

{% if counterClaims is empty %}
No counter claims exist for this case
{% endif %}

{% for claim in counterClaims -%}
{% if claim.eventLogs is empty %}
  <h3 class="heading-h2">Counterclaim: {{ claim.summary }}</h3>
  No events to show
  <br>
{% else %}
  <table class="EventLogTable">
  <caption><h3 class="heading-h2">Counterclaim: {{ claim.summary }}</h3></caption>
  <thead>
    <tr>
      <th class="govuk-table__header govuk-!-width-one-quarter">
        <span class="text-16">Event</span>
      </th>
      <th class="govuk-table__header govuk-!-width-one-quarter">
        <span class="text-16">Date</span>
      </th>
      <th class="govuk-table__header govuk-!-width-one-quarter">
        <span class="text-16">Author</span>
      </th>
      <th class="govuk-table__header govuk-!-width-one-quarter">
        <span class="text-16">Notes</span>
      </th>
    </tr>
    </thead>
    <tbody>
      {% for entry in claim.eventLogs -%}
      <tr>
        <td><span class="text-16">{{ entry.eventName }}</span></td>
        <td><span class="text-16">{{ entry.created | date("dd MMM yyyy, h:mm:ss a")}}</span></td>
        <td><span class="text-16">{{ entry.invokedBy }}</span></td>
        <td><span class="text-16">{{ entry.notes }}&nbsp;</span></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}
<br>
{% endfor %}
<br>

