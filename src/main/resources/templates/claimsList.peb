{% macro showParties(partyList) %}
  {% for party in partyList %}
  {{ party.forename }} {{ party.surname }} {% if party.active == "NO" %} (inactive) {% endif %}<br>
  {%- endfor %}
{% endmacro %}

{% macro showActions(claimId, _context) %}
<a href="/cases/case-details/{{_context.caseReference}}/trigger/{{_context.addClaimantEvent}}?claimId={{claimId}}" role="button" class="govuk-button govuk-button--secondary">Add claimant</a><br><a href="/cases/case-details/{{_context.caseReference}}/trigger/{{_context.addDefendantEvent}}?claimId={{claimId}}" role="button" class="govuk-button govuk-button--secondary">Add defendant</a><br><a href="/cases/case-details/{{_context.caseReference}}/trigger/{{_context.addInterestedPartyEvent}}?claimId={{claimId}}" role="button" class="govuk-button govuk-button--secondary">Add interested party</a>
{% endmacro %}

